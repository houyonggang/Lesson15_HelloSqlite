<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/black</item>
        <item name="colorPrimaryDark">@color/black</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="TitleText"><!-- 标题文字 -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

    <style name="TabBarItemTheme">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@drawable/item_checked_selector</item>
        <item name="android:textSize">11sp</item>
        <item name="android:ellipsize">marquee</item>
        <item name="android:gravity">bottom|center_horizontal</item>
        <item name="android:drawableTop">@null</item>
        <item name="android:button">@null</item>
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">2dp</item>
        <item name="android:paddingLeft">2dp</item>
        <item name="android:paddingRight">2dp</item>
    </style>

    <style name="TabBarItem_Store_Theme" parent="TabBarItemTheme">
        <item name="android:drawableTop">@drawable/mode_store_selector</item>
    </style>

    <style name="TabBarItem_Home_Theme" parent="TabBarItemTheme">
        <item name="android:drawableTop">@drawable/mode_home_selector</item>
    </style>
    <style name="TabBarItem_Goods_Theme" parent="TabBarItemTheme">
    </style>
    <style name="TabBarItem_Cart_Theme" parent="TabBarItemTheme">
        <item name="android:drawableTop">@drawable/mode_cart_selector</item>
    </style>
    <style name="TabBarItem_Member_Theme" parent="TabBarItemTheme">
        <item name="android:drawableTop">@drawable/mode_member_selector</item>
    </style>
</resources>